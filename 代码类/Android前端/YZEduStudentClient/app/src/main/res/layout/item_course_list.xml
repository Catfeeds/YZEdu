<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content" >

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            app:qmui_is_circle="false"
            app:qmui_corner_radius="5dp"
            android:id="@+id/item_course_list_iv_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@drawable/html5"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_course_list_tv_name"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="课程名称" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/item_course_list_tv_learn_student"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="39人学习" />

                <TextView
                    android:id="@+id/item_course_list_tv_sum_student"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="容量：120人"
                    android:textColor="#666666"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/item_course_list_tv_sum"
                android:textSize="12sp"
                android:textColor="#34B8AD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="共17课时" />

                <TextView
                    android:id="@+id/item_course_list_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_weight="1"
                    android:text="免费"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>