<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_card_write"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_live_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="直播标题1"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/item_live_tv_state"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/qmui_config_color_50_blue"
                android:gravity="center"
                android:text="直播中"
                android:textColor="@color/qmui_config_color_white" />
        </LinearLayout>

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/item_live_iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:qmui_corner_radius="@dimen/dimen_9dp"
            app:qmui_is_circle="false"
            app:srcCompat="@drawable/springmvc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/live_room_id"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/item_live_tv_room_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="100338234"
                android:textColor="#999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
