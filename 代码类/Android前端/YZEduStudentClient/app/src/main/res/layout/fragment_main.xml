<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="15dp"
        android:background="@mipmap/my_top_bar">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            />
    </FrameLayout>
    <View
        android:id="@+id/view_temp"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#d6d6d6" />
    <ScrollView
        android:id="@+id/sv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mainBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/mainBackground"
            >
            <com.oragee.banners.BannerView
                android:id="@+id/vp_banner"
                android:layout_marginTop="5dp"
                android:background="#F0F0F0"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="10dp">
            </com.oragee.banners.BannerView>

            <com.fstech.yzedusc.view.MyListView
                android:id="@+id/lv_information"
                android:divider="@color/mainBackground"
                android:dividerHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/re_more_top"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/mainBackground">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="华文黑体"
                    android:layout_centerHorizontal="true"
                    android:text="@string/showmore"
                    android:textColor="#666666" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_toEndOf="@id/textView4"
                    android:layout_centerVertical="true"
                    android:alpha="0.2"
                    android:src="@mipmap/cd1" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>